{% extends 'BlogBundle::layout.html.twig' %}

{% block content %}

    <div class="row justify-content-center">
        <div class="col-10 article">
          {% for any in article %}
            <h3>{{ any.title }}</h3>
            <span class="date_oc">{{ any.dateOc | date("d/m/Y") }}</span>
            <hr>
            <div class="description">
                {{ any.description }}
            </div>

          {% endfor %}
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-10">
          <h4>Commentaires</h4>

          {% if is_granted('ROLE_USER') %}
              {{ form_start(form) }}
              {{ form_widget(form) }}
              {{ form_end(form) }}
          {% endif %}
        </div>
    </div>

{% endblock %}
